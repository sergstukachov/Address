<?xml version="1.0"?>
<config xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:framework:Api/etc/extension_attributes.xsd">
    <extension_attributes for="Magento\Quote\Api\Data\AddressInterface">
        <attribute code="home_business" type="datatype">
            <join reference_table="sv_quote_address" reference_field="address_id" join_on_field="address_id">
                            <field>home_business</field>
                        </join>
        </attribute>
    </extension_attributes>
    <extension_attributes for="Magento\Sales\Api\Data\OrderAddressInterface">
            <attribute code="home_business" type="int">
                <join reference_table="sv_order_address" reference_field="entity_id" join_on_field="entity_id">
                    <field>home_business</field>
                </join>
            </attribute>
        </extension_attributes>
    <extension_attributes for="Magento\Customer\Api\Data\AddressInterface">
            <attribute code="home_business" type="int"/>
        </extension_attributes>
</config>
